        <button onclick = "myfunction(5)">Click me </button>
        <div id = "result"></div>
        <div id = "result1"></div>
        <script>
            var a = 10
            function myfunction(){
                var b = 2
                var c = a + b
                document.getElementById("result").innerHTML = "the value is " + c

                }
                
             
            </script>
